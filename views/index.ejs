<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="./android-chrome-512x512.png" type="image/png" />

    <title>Fatty_Room</title>

    <script defer src="/socket.io/socket.io.js"></script>
    <script defer src="/script.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      tailwind.config = {
        darkMode: "class",
      };
    </script>
    <style>
      * {
        user-select: none; /* Standard */
        -webkit-user-select: none; /* Safari */
        -moz-user-select: none; /* Firefox */
        -ms-user-select: none; /* Edge */
        -webkit-touch-callout: none; /* iOS Safari */
      }

      .dark {
        background-color: #1a202c;
        color: #ffffffcc;
      }
      .app-container {
        display: flex;
        height: 100vh;
      }
      .sidebar {
        width: 300px;
        background-color: #2d3748ba;
        padding: 20px;
      }
      .chat-area {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        padding: 10px;
      }
      .message-box {
        flex-grow: 1;
        overflow-y: auto;
        padding: 10px;
        background-color: #4a5568c7;
        border-radius: 10px;
        height: 70vh;
      }
      .input-area {
        display: flex;
        gap: 10px;
        align-items: center;
      }
      .input-area input {
        flex-grow: 1;
        padding: 12px;
        border-radius: 5px;
        background-color: #2d3748;
        border: 1px solid #718096;
        color: rgb(255, 245, 245);
        outline: none;
      }
      .send-button {
        background-color: #38a169;
        padding: 12px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
      }
      .send-button:hover {
        background-color: #256b48;
      }
      .user-list {
        list-style: none;
        padding: 0;
      }
      .user-list li {
        text-transform: capitalize;
        padding: 8px;
        border: 1px solid #33ff0034;
        border-radius: 5px;
        background-color: #eeeeee30;
      }

      /* Server message: center */
      .server-message {
        text-align: center;
        color: rgba(128, 128, 128, 0.505);
        font-style: italic;
        background: #00000064;
        padding: 8px;
        border-radius: 5px;
        width: auto;
        align-self: center;
      }

      /* User's own messages: right */
      .user-message.self {
        text-align: right;
        background: #007bffb3;
        color: white;
        padding: 8px;
        border-radius: 5px;
        width: auto;
        align-self: flex-end;
      }

      /* Other users' messages: left */
      .user-message.other {
        text-align: left;
        background: #b570f98f;
        color: rgb(255, 242, 242);
        padding: 8px;
        border-radius: 5px;
        width: auto;
        align-self: flex-start;
      }
      /* Add this to your CSS file */
      .no-scrollbar::-webkit-scrollbar {
        display: none; /* Hide scrollbar for Chrome, Safari */
      }

      .no-scrollbar {
        -ms-overflow-style: none; /* Hide scrollbar for IE, Edge */
        scrollbar-width: none; /* Hide scrollbar for Firefox */
      }
      .username {
        color: #1cef1ca1;
        text-transform: uppercase;
        text-align: center;
        text-shadow: 2px 2px 4px rgba(59, 54, 54, 0.5);
      }
    </style>
  </head>
  <body class="dark overflow-x-hidden no-scrollbar">
    <div id="joinForm" class="flex justify-center items-center h-screen">
      <div class="card p-6 bg-gray-800 rounded-lg shadow-lg text-center">
        <h2 class="text-2xl font-bold mb-4">Join Chat Room</h2>
        <input
          type="text"
          id="username"
          placeholder="Enter your name"
          class="input mb-3 w-full px-4 py-3 text-white rounded-md outline-none focus:outline-none focus:ring-2 focus:ring-blue-500 bg-zinc-600"
          required
        />
        <input
          type="text"
          id="room"
          placeholder="Enter room name"
          class="input mb-3 w-full px-4 py-3 text-white rounded-md outline-none focus:outline-none focus:ring-2 focus:ring-blue-500 bg-zinc-600"
          required
        />
        <div class="w-full flex items-center gap-2 relative">
          <input
            type="password"
            id="password"
            placeholder="Enter room password"
            class="input mb-3 w-full px-4 py-3 text-white rounded-md outline-none focus:ring-2 focus:ring-blue-500 bg-zinc-600"
            required
          />
          <button
            onclick="togglePassword()"
            class="absolute right-3 top-1/2 transform -translate-y-1/2"
          >
            <i id="eyeIcon">üëÅÔ∏è</i>
          </button>
        </div>

        <button
          onclick="joinChat()"
          class="button bg-blue-500 text-white w-full p-3 rounded"
        >
          Join Room
        </button>
      </div>
    </div>

    <div id="chat" class="hidden app-container overflow-auto no-scrollbar">
      <div
        class="sidebar w-screen flex flex-col items-center justify-center no-scrollbar"
      >
        <h3 class="text-[40px] font-bold mb-2 underline capitalize bold">
          Users
        </h3>
        <ul
          id="users"
          class="user-list text-md text-blue-300 flex flex-wrap gap-2 px-8 uppercase"
        ></ul>
      </div>
      <div class="chat-area">
        <div
          id="messages"
          class="message-box flex flex-col items-center justify-center text-xl gap-3 overflow-auto no-scrollbar px-5"
        ></div>
        <div class="input-area flex flex-wrap gap-3">
          <input
            type="text"
            id="messageInput"
            placeholder="Type a message..."
            class="input px-4 py-3 mt-4 text-white text-xl rounded-md sm:w-auto w-full outline-none focus:outline-none focus:ring-2 focus:ring-blue-500 bg-zinc-600"
          />
          <button
            onclick="sendMessage()"
            class="send-button text-white mt-4 w-full sm:w-auto"
          >
            Send
          </button>
        </div>
      </div>
    </div>

    <script>
            document.addEventListener("DOMContentLoaded", function () {
              document.body.classList.add("dark");
              const messageInput = document.getElementById("messageInput");
              messageInput.addEventListener("keypress", function (event) {
                if (event.key === "Enter") {
                  event.preventDefault();
                  sendMessage();
                }
              });
            });
            <!--  -->
            document.addEventListener("keydown", function (event) {
        // Block screenshot shortcuts
        if (
          event.key === "PrintScreen" ||
          (event.ctrlKey && event.key === "p") ||
          (event.metaKey && event.key === "p")
        ) {
          event.preventDefault();
          alert("Screenshots are disabled!");
        }
      });

      // Detect when user tries to switch apps (Android/iOS)
      document.addEventListener("visibilitychange", function () {
        if (document.hidden) {
          document.body.style.display = "none"; // Hide content
          setTimeout(() => {
            document.body.style.display = "block";
          }, 1000); // Restore after 1s
        }
      });



      // Prevent copying content
      document.addEventListener("copy", function (event) {
        event.preventDefault();
        alert("Copying is disabled!");
      });

      // For Android & iOS (blocks screen recording)


      (function () {
        // Prevent right-click (Context Menu)
        document.addEventListener("contextmenu", function (event) {
          event.preventDefault();
        });

        // Prevent F12, Ctrl+Shift+I, Ctrl+Shift+J, Ctrl+Shift+C, Ctrl+U
        document.addEventListener("keydown", function (event) {
          if (
            event.key === "F12" ||
            (event.ctrlKey && event.shiftKey && event.key === "I") ||
            (event.ctrlKey && event.shiftKey && event.key === "J") ||
            (event.ctrlKey && event.shiftKey && event.key === "C") ||
            (event.ctrlKey && event.key === "U")
          ) {
            event.preventDefault();
          }
        });


      })();
       function togglePassword() {
        const passwordField = document.getElementById("password");
        const eyeIcon = document.getElementById("eyeIcon");
        if (passwordField.type === "password") {
          passwordField.type = "text";
          eyeIcon.textContent = "üôà"; // Closed eye icon
        } else {
          passwordField.type = "password";
          eyeIcon.textContent = "üëÅÔ∏è"; // Open eye icon
        }
      }
    </script>
  </body>
</html>
